<p>
  <strong>User:</strong>
  <%= @cocktail.user_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @cocktail.title %>
</p>

<p>
  <%
=begin%>
  <strong>Image:</strong>
  <%
=end%>
  <%= image_tag(@cocktail.image.url, alt: 'Image') if @cocktail.image? %>
  <%
=begin%>
  <%= link_to(image_tag(@cocktail.image.thumb.url, alt: 'Image'), @cocktail.image.url, target: '_blank') if @cocktail.image? %>
  <%
=end%>
</p>

<p>
  <strong>Description:</strong>
  <%= @cocktail.description %>
</p>

<p>
  <strong>Directions:</strong>
  <%= @cocktail.directions %>
</p>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<% end %>
<% if user_signed_in? %>
<%= link_to 'Destroy', cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', cocktails_path %>