<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Email</th>
      <th>Login</th>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag(user.avatar.thumb.url, alt: 'avatar') if user.avatar? %></td>
      <td><%= user.email %></td>
      <td><%= user.login %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>